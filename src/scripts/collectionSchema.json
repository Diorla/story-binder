{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/FolderConfig",
  "definitions": {
    "FolderConfig": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "note": {
          "type": "string"
        },
        "template": {
          "anyOf": [
            {
              "$ref": "#/definitions/FormType"
            },
            {
              "$ref": "#/definitions/EditorType"
            }
          ]
        }
      },
      "required": [
        "id",
        "name",
        "note"
      ],
      "additionalProperties": false
    },
    "FormType": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "const": "form"
        },
        "name": {
          "type": "string"
        },
        "template": {
          "$ref": "#/definitions/FormTemplate"
        }
      },
      "required": [
        "description",
        "id",
        "name",
        "template",
        "type"
      ],
      "additionalProperties": false
    },
    "FormTemplate": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "titleId": {
          "type": "string"
        },
        "descriptionId": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "questions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Question"
          }
        },
        "createdAt": {
          "type": "number"
        },
        "updatedAt": {
          "type": "number"
        }
      },
      "required": [
        "id",
        "title",
        "description",
        "titleId",
        "descriptionId",
        "userId",
        "questions",
        "createdAt",
        "updatedAt"
      ],
      "additionalProperties": false
    },
    "Question": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "order": {
          "type": "number"
        },
        "question": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "placeholder": {
          "type": "string"
        },
        "answer": {
          "$ref": "#/definitions/AnswerType"
        }
      },
      "required": [
        "id",
        "order",
        "question",
        "description",
        "placeholder",
        "answer"
      ],
      "additionalProperties": false
    },
    "AnswerType": {
      "anyOf": [
        {
          "$ref": "#/definitions/TextTemplate"
        },
        {
          "$ref": "#/definitions/NumberTemplate"
        },
        {
          "$ref": "#/definitions/SelectTemplate"
        },
        {
          "$ref": "#/definitions/MultiSelectTemplate"
        },
        {
          "$ref": "#/definitions/DateTemplate"
        },
        {
          "$ref": "#/definitions/TimeTemplate"
        },
        {
          "$ref": "#/definitions/RangeTemplate"
        },
        {
          "$ref": "#/definitions/ReferenceTemplate"
        },
        {
          "$ref": "#/definitions/UnitTemplate"
        }
      ]
    },
    "TextTemplate": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "text"
        },
        "value": {
          "type": "string"
        },
        "data": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "value",
        "data"
      ],
      "additionalProperties": false
    },
    "NumberTemplate": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "number"
        },
        "value": {
          "type": "number"
        },
        "minValue": {
          "type": "number"
        },
        "maxValue": {
          "type": "number"
        },
        "isInteger": {
          "type": "boolean"
        }
      },
      "required": [
        "type",
        "value",
        "minValue",
        "maxValue",
        "isInteger"
      ],
      "additionalProperties": false
    },
    "SelectTemplate": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "select"
        },
        "value": {
          "type": "string"
        },
        "data": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "value",
        "data"
      ],
      "additionalProperties": false
    },
    "MultiSelectTemplate": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "multi-select"
        },
        "value": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "data": {
          "type": "string"
        },
        "minCount": {
          "type": "number"
        },
        "maxCount": {
          "type": "number"
        }
      },
      "required": [
        "type",
        "value",
        "data",
        "minCount",
        "maxCount"
      ],
      "additionalProperties": false
    },
    "DateTemplate": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "date"
        },
        "value": {
          "type": "number"
        },
        "minValue": {
          "type": "number"
        },
        "maxValue": {
          "type": "number"
        }
      },
      "required": [
        "type",
        "value",
        "minValue",
        "maxValue"
      ],
      "additionalProperties": false
    },
    "TimeTemplate": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "time"
        },
        "value": {
          "type": "number"
        },
        "minValue": {
          "type": "number"
        },
        "maxValue": {
          "type": "number"
        }
      },
      "required": [
        "type",
        "value",
        "minValue",
        "maxValue"
      ],
      "additionalProperties": false
    },
    "RangeTemplate": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "range"
        },
        "value": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "minValue": {
          "type": "number"
        },
        "maxValue": {
          "type": "number"
        },
        "isInteger": {
          "type": "boolean"
        }
      },
      "required": [
        "type",
        "value",
        "minValue",
        "maxValue",
        "isInteger"
      ],
      "additionalProperties": false
    },
    "ReferenceTemplate": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "reference"
        },
        "templateId": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "templateId",
        "value"
      ],
      "additionalProperties": false
    },
    "UnitTemplate": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "unit"
        },
        "value": {
          "type": "number"
        },
        "unit": {
          "type": "string"
        },
        "data": {
          "type": "string"
        },
        "minValue": {
          "type": "number"
        },
        "maxValue": {
          "type": "number"
        },
        "isInteger": {
          "type": "boolean"
        }
      },
      "required": [
        "type",
        "value",
        "unit",
        "data",
        "minValue",
        "maxValue",
        "isInteger"
      ],
      "additionalProperties": false
    },
    "EditorType": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "const": "editor"
        },
        "name": {
          "type": "string"
        },
        "template": {
          "type": "string"
        }
      },
      "required": [
        "description",
        "id",
        "name",
        "template",
        "type"
      ],
      "additionalProperties": false
    }
  }
}